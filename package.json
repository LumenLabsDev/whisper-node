{
  "name": "@lumen-labs-dev/whisper-node",
  "version": "0.0.4",
  "description": "Local audio transcription on CPU. Node.js bindings for OpenAI's Whisper.",
  "homepage": "http://www.npmjs.com/@lumen-labs-dev/whisper-node",
  "author": "Maximiliano Veiga",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "@lumen-labs-dev/whisper-node": "dist/cli/download.js",
    "whisper-node": "dist/cli/download.js",
    "download": "dist/cli/download.js"
  },
  "scripts": {
    "start": "echo Starting with: npm run dev... && npm run dev",
    "dev": "NODE_ENV='development' nodemon --watch './**/*.ts' --exec 'ts-node' src/scripts/test.ts",
    "build": "tsc && shx chmod +x dist/cli/download.js",
    "prepack": "node -e \"const sh=require('shelljs');const p=require('path');const lib=p.join(__dirname,'lib');if(!sh.test('-d',lib)) sh.mkdir('-p',lib);const dst=p.join(lib,'whisper.cpp');if(!sh.test('-d',dst)){if(sh.exec('git --version',{silent:true}).code===0){sh.exec('git clone --depth 1 https://github.com/ggml-org/whisper.cpp \"'+dst+'\"');} else {console.log('[whisper-node] Warning: git not available to bundle whisper.cpp; downloader will fetch it at runtime.');}}\"",
    "prepare": "npm run build",
    "test": "node dist/scripts/test.js"
  },
  "files": [
    "dist",
    "lib/whisper.cpp",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/shelljs": "^0.8.17",
    "nodemon": "^3.1.10",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "ml-kmeans": "^6.0.0",
    "readline-sync": "^1.4.10",
    "shelljs": "^0.10.0",
    "wavefile": "^11.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LumenLabsDev/whisper-node.git"
  },
  "license": "MIT",
  "keywords": [
    "OpenAI",
    "Whisper",
    "CPP",
    "C++",
    "Bindings",
    "Transcribe",
    "Transcriber",
    "Transcript",
    "Transcription",
    "Audio",
    "Speech",
    "Speech-to-Text",
    "STT",
    "TTS",
    "SRT",
    "Diarization",
    "local"
  ],
  "directories": {
    "lib": "lib"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/LumenLabsDev/whisper-node/issues"
  }
}
